# Ques Merged Backend - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Development Environment Configuration
ENVIRONMENT=development

# PostgreSQL Database Configuration
PG_HOST=your_postgres_host_here
PG_PORT=5432
PG_USER=your_postgres_username
PG_PASSWORD=your_secure_password
PG_DATABASE=your_database_name

# Vector Database Configuration  
VECTORDB_ENDPOINT=your_vectordb_endpoint_here
VECTORDB_USERNAME=your_vectordb_username
VECTORDB_KEY=your_vectordb_api_key_here
VECTORDB_COLLECTION=user_vectors
VECTORDB_DIMENSION=768

# AI API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Tencent Cloud Configuration
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_REGION=ap-guangzhou

# Content Moderation Service (CMS/TMS) Configuration
TENCENT_MODERATION_BIZ_TYPE=default
ENABLE_CONTENT_MODERATION=true
MODERATION_AUTO_APPROVE_THRESHOLD=0.8
MODERATION_AUTO_REJECT_THRESHOLD=0.9

# Application Security Keys
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Configuration
TENCENT_EMAIL_TEMPLATE_ID=your_template_id
TENCENT_EMAIL_TEMPLATE_ID_EN=your_template_id_en
TENCENT_EMAIL_TEMPLATE_ID_CN=your_template_id_cn
TENCENT_SENDER_EMAIL=your_sender_email@domain.com
TENCENT_SENDER_EMAIL_ALT=your_alt_email@domain.com
TENCENT_SES_REGION=ap-guangzhou

# SMS Configuration for Phone Verification
TENCENT_SMS_SDK_APP_ID=your_sms_sdk_app_id_here
TENCENT_SMS_SIGNATURE=Ques
TENCENT_SMS_VERIFICATION_TEMPLATE_ID=your_sms_template_id_here
SMS_CODE_LENGTH=6
SMS_CODE_EXPIRY_MINUTES=10
SMS_MAX_ATTEMPTS=3
SMS_RATE_LIMIT_MINUTES=1

# WeChat OAuth Configuration
WECHAT_APP_ID=your_wechat_app_id_here
WECHAT_SECRET=your_wechat_app_secret_here

# Tencent COS (Cloud Object Storage) Configuration
COS_REGION=ap-guangzhou
COS_BUCKET_NAME=your_bucket_name_here
COS_DOMAIN=your_bucket_domain_here

# Optional: Logging and Environment Settings
LOG_LEVEL=DEBUG

# OR use individual components:
PG_USER=postgres
PG_PASSWORD=your_secure_password_here
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=ques_merged_db

# Database Connection Pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Application Settings
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Vector Database (Tencent Cloud)
VECTORDB_ENDPOINT=your-vectordb-endpoint
VECTORDB_USERNAME=your-vectordb-username
VECTORDB_KEY=your-vectordb-api-key
VECTORDB_COLLECTION=ques_collection
VECTORDB_DIMENSION=768

# AI/ML Services
DEEPSEEK_API_KEY=your-deepseek-api-key

# WeChat OAuth
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_REDIRECT_URI=https://your-domain.com/auth/wechat/callback

# Email Service (Tencent Cloud SES)
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_REGION=ap-singapore
SES_FROM_EMAIL_EN=noreply-en@yourdomain.com
SES_FROM_EMAIL_CN=noreply-cn@yourdomain.com
SES_TEMPLATE_ID_EN=33594
SES_TEMPLATE_ID_CN=33595

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=300  # 5 minutes
ENABLE_CORS=true
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Monitoring and Analytics
ENABLE_METRICS=true
ENABLE_SECURITY_LOGGING=true
PERFORMANCE_LOG_THRESHOLD=1000  # milliseconds

# Feature Flags (default values)
ENABLE_WECHAT_AUTH=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_VECTOR_RECOMMENDATIONS=true
ENABLE_PROJECT_CREATION=true
ENABLE_CHAT_FEATURES=true
